            </div>
        </div>
    </div>
</div>
   <!-- Menu Start -->
<div class="menu">
    <div class="container">
        <div class="section-header text-center">
            <p>Food Menu</p>
            <h2>Delicious Food Menu</h2>
        </div>
        <div class="menu-tab">
            <ul class="nav nav-pills justify-content-center">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="pill" href="#burgers">Restaurant informations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#snacks">product list</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/map">View Map</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="burgers" class="container tab-pane active">
                    <div class="row">
                        <div class="col-lg-7 col-md-12">
                            <div class="menu-item">
                                <div class="menu-text">
                                    <h3>Name : {{restaurant.name}}</h3>
                                </div>
                            </div>
                            <div class="menu-item">
                                <div class="menu-text">
                                    <h3>Location : {{restaurant.location}}</h3>
                                </div>
                            </div>
                            <div class="menu-item">
                                <div class="menu-text">
                                    <h3>Category : {{restaurant.category}}</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5 d-none d-lg-block">
                            <img src="{{ asset(restaurant.image)}}" alt="Image">
                        </div>
                    </div>
                </div>
                <div id="snacks" class="container tab-pane fade">
                    <div class="row">
                        <div class="col-lg-7 col-md-12">
                            {% for product in products %}
                            <div class="menu-item">
                                <div class="menu-img">
                                    <img src="{{ asset(restaurant.image)}}" alt="Image">
                                </div>
                                <div class="menu-text">
                                    <h3><span>{{product.name}}</span> <strong>${{product.price}}</strong></h3>
                                    <p>{{product.category}}</p>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <div class="col-lg-5 d-none d-lg-block">
                            <img src="{{ asset(restaurant.image)}}" alt="Image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Menu End -->
{% endblock %}
