{% extends 'front/base.html.twig' %}

{% block title %}Edit Review{% endblock %}

{% block body %}
    <h1>Edit Review</h1>

    {{ form_start(form) }}
    {{ form_row(form.rating, {'attr': {'class': 'star-rating'}}) }}
    {{ form_row(form.comment) }}
    <button type="submit" class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}
{% endblock %}