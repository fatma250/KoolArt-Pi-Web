{% extends 'base_back.html.twig' %}

{% block title %}Forumpost index{% endblock %}

{% block body %}
    <h1>Forumpost index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forumpost in forumposts %}
            <tr>

                <td>{{ forumpost.title }}</td>
                <td> {% if forumpost.content %}
                        <img src="{{ asset('assets/img/imgPost/' ~ forumpost.content) }}" alt="le post" style="max-width: 100px; max-height: 100px;">
                    {% else %}
                        Pas d'image
                    {% endif %}</td>
                <td>
                <td>
                    <a href="{{ path('app_forumpost_show', {'id': forumpost.id}) }}">show</a>
                    <a href="{{ path('app_forumpost_edit', {'id': forumpost.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_forumpost_new') }}">Create new</a>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ tinymce_init() }}
{% endblock %}
