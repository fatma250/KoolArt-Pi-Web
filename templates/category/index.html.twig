{% extends 'baseDash.html.twig' %}

    {% block body %}
        <hr class="my-5" />
        <div class="content-wrapper">
            <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Bootstrap Table with Header - Light -->
        <div class="card">
          <h5 class="card-header">Categories</h5>
          <div class="table-responsive text-nowrap">
            <a class="btn btn-danger btn-buy-now" style="margin-left: 2rem;" href="{{ path('app_category_new')}}">Add</a>
            <table class="table">
              <thead class="table-light">
                <tr>
                    <th>Type</th>
                    <th>Category</th>
                    <th>actions</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                {% for category in categories %}
                <tr>
                  <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{ category.type }}</strong></td>
                  <td>{{category.category}}</td>
                  <td>
                    <div class="d-flex align-items-center">
                        {{ include('category/_delete_form.html.twig') }}
                        <div style="position: relative;left:30px;">
                            <a class="btn btn-danger btn-buy-now" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                        </div>
                    </div>
                  </td>
                </tr>
                {% endfor %} 
              </tbody>
            </table>
          </div>
        </div>
        </div>
        </div>
        <!-- Bootstrap Table with Header - Light -->

        <hr class="my-5" />
    {% endblock %}
