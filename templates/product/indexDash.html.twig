{% extends 'baseDash.html.twig' %}


    {% block body %}
        <hr class="my-5" />
        <div class="content-wrapper">
            <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Bootstrap Table with Header - Light -->
        <div class="card">
          <h5 class="card-header">Products</h5>
          <div class="table-responsive text-nowrap">
            <a class="btn btn-danger btn-buy-now" style="margin-left: 2rem;" href="{{ path('app_product_new')}}">Add</a>
            <table class="table">
              <thead class="table-light">
                <tr>
                  <th>Name</th>
                  <th>Location</th>
                  <th>Category</th>
                  <th>Restaurant</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                {% for product in products %}
                <tr>
                  <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{ product.name }}</strong></td>
                  <td>{{product.price}}</td>
                  <td>{{product.Category}}</td>
                  <td>{{product.Restaurant}}</td>
                  <td>
                    <div class="d-flex align-items-center">
                        {{ include('product/_delete_form.html.twig') }}
                        <div style="position: relative;left:30px;">
                            <a class="btn btn-danger btn-buy-now" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                        </div>
                    </div>
                  </td>
                </tr>
                {% endfor %} 
              </tbody>
            </table>
          </div>
        </div>
        </div>
        </div>
        <!-- Bootstrap Table with Header - Light -->

        <hr class="my-5" />
    {% endblock %}