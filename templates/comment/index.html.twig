{% extends 'base_back.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>CommentContent</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.commentContent }}</td>
                <td>
                    <a href="{{ path('app_comment_show', {'id': comment.id}) }}" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M1.855 7a5 5 0 0 1 8.29-3.767C9.414 2.747 8.38 2 7.5 2S5.586 2.747 4.855 3.233A5 5 0 0 1 1.855 7zM0 7a7 7 0 0 1 11.542-5.334C10.71 1.397 9.157 1 7.5 1S4.29 1.397 1.458 1.666A7 7 0 0 1 0 7zm16 0a7 7 0 0 1-11.542 5.334C5.29 14.603 6.843 15 8.5 15s3.21-.397 6.042-.666A7 7 0 0 1 16 7zM7.5 3a4.5 4.5 0 0 1 4.102 2.501.5.5 0 0 0 .758.102l1.75-1.05a.5.5 0 0 1 .5.866l-1.75 1.05a.5.5 0 0 0-.102.758A4.5 4.5 0 1 1 7.5 3zM8 5a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                        </svg>
                        Show
                    </a>
                    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M13.75 0a.75.75 0 0 1 .75.75v11.793l-3.02-3.02a1.5 1.5 0 0 0-2.122 0L6.354 12.854l-1.768 1.768a.25.25 0 0 1-.354 0l-3-3a.25.25 0 0 1 0-.354l1.768-1.768-3.02-3.02a.75.75 0 0 1 0-1.06L9.22 0h4.53zM11.5 1.61L12.89 3H11.5a.5.5 0 0 0-.5.5v1.39l-9.08 9.08a.5.5 0 0 0-.122.204l-.748 2.244a.5.5 0 0 0 .616.617l2.244-.747a.5.5 0 0 0 .203-.122l9.08-9.08h1.39a.5.5 0 0 0 .5-.5V2.89l-1.39-1.39zm-6.218 10.212l-2.12.707.707-2.12 6.708-6.707 1.414 1.414-6.707 6.706z"/>
                        </svg>
                        Edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href=<a href="{{ path('app_comment_new') }}" class="btn btn-primary" style="background-color: #fbaf32; color: #ffffff;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
            <path d="M7.5 1v14a.5.5 0 0 1-1 0V1a.5.5 0 0 1 1 0z"/>
            <path d="M1 7.5h14a.5.5 0 0 1 0 1H1a.5.5 0 0 1 0-1z"/>
        </svg>
        Create new
    </a>


{% endblock %}
